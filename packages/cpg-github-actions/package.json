{
  "name": "@cpg-cli/github-actions",
  "version": "1.1.17",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "bin": {
    "cpg-github-actions": "index.js"
  },
  "scripts": {
    "publish": "semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "semantic-release": "^18.0.1",
    "semantic-release-monorepo": "^7.0.5",
    "@semantic-release/git": "^10.0.1"
  },
  "files": [
    "template"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): set `package.json` to ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
