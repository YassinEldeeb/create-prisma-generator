{
  "private": true,
  "workspaces": [
    "packages/cpg-github-actions",
    "packages/cpg-root-configs",
    "packages/cpg-semantic-releases",
    "packages/cpg-template",
    "packages/cpg-template-gen-usage",
    "packages/create-prisma-generator"
  ],
  "scripts": {
    "new-template": "ts-node ./scripts/addNewTemplate.ts",
    "simulate-dist": "node ./scripts/simulateDist.js",
    "build": "turbo run build"
  },
  "devDependencies": {
    "ts-node": "^10.4.0",
    "turbo": "^1.0.19"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "publish": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
